doctype html
html(lang="en")
  head
    title Local Tour
    meta(charset="utf-8")
    link(href='https://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css')
    link(href='/stylesheets/bootstrap.min.css' rel='stylesheet' type='text/css')
    link(href='/stylesheets/style.css' rel='stylesheet' type='text/css')
    script(src='/javascripts/jquery-2.2.0.min.js')
  body
    div.container
      if user.status == 423
        h4.red Your account is in a abnormal status
      else
        div.header
          a(href = info.idUrl)
            h3= user.id
          a(href = info.logoutUrl)
            h3 Logout
        div.row
          table.table
            each val, key in user
              tr
                td= key
                td= val
